@model Pratica_Profissional.ViewModel.FormaPagamentoVM

@{
    ViewBag.Title = "Delete";
    ViewBag.readOnly = true;
}

@using (Html.BeginForm())
{
    <nav aria-label="breadcrumb" style="margin-top:10px;">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index")"><i class="fa fa-list"></i> Lista de forma de pagamentos</a></li>
            <li class="breadcrumb-item active"><i class="fa fa-trash" style="margin-top:3px; margin-right:5px"></i> Remover forma de pagamento</li>
        </ol>
    </nav>

    <div class="form-horizontal">
        <div class="card" style="padding-bottom:16px">
            <h3 class="card-header" style="background-color:lightblue">Remover forma de pagamentos</h3>
            @Html.Partial("Form", Model)
        </div>
    </div>
}
<script type="text/javascript">
    $(function () {
        $(".form-control").attr("disabled", true);
    })
</script>
