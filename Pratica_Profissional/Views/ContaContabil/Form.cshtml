@using Pratica_Profissional.Util.Class;
@model Pratica_Profissional.ViewModel.ContaVM

@{
    var action = ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString().ToLower();
    bool readOnly = Convert.ToBoolean(ViewBag.ReadOnly);
}

@Html.AntiForgeryToken()
<h6 class="card-header">Informações</h6>

<div class="card-body">
    @if (action != "create")
    {
        <div class="form-group">
            <div class="form-row">
                <div class="@Helper.Input2">
                    @Html.LabelFor(model => model.idConta, "Código", new { @class = Helper.LabelTop })
                    @Html.TextBoxFor(model => model.idConta, new { @class = "form-control", readOnly = true })
                </div>
            </div>
        </div>
    }


    <div class="form-group">
        <div class="form-row">
            <div class="@Helper.Input12">
                @Html.LabelFor(model => model.nmConta, "Conta", new { @class = "required" })
                @Html.TextBoxFor(model => model.nmConta, new { @class = "form-control text", maxlength = "50" })
                @Html.ValidationMessageFor(model => model.nmConta, null, new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="@Helper.Input3">
                @Html.LabelFor(model => model.vlSaldo, "Saldo (R$)", new { @class = Helper.LabelTop })
                @Html.TextBoxFor(model => model.vlSaldo, new { @class = "form-control currency" })
                @Html.ValidationMessageFor(model => model.vlSaldo, null, new { @class = "text-danger" })
            </div>
        </div>
    </div>


    @if (action != "create")
    {
        <div class="form-group">
            <div class="form-row">
                <div class="@Helper.Input3">
                    @Html.LabelFor(model => model.dtCadastro, "Data de cadastro", new { @class = Helper.LabelTop })
                    @Html.TextBoxFor(model => model.dtCadastro, new { @class = "form-control", disabled = "disabled" })
                </div>

                <div class="@Helper.Input3">
                    @Html.LabelFor(model => model.dtAtualizacao, "Última atualização", new { @class = Helper.LabelTop })
                    @Html.TextBoxFor(model => model.dtAtualizacao, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
    }
</div>

<div class="d-flex justify-content-end" style="padding-right:33px">
    <button type="button" style="margin-right:10px" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "ContaContabil")'">Sair</button>
    @if ((action != "details") && (action != "delete"))
    {
        <button type="submit" class="btn btn-success">Salvar</button>
    }
    @if (action == "delete")
    {
        <button type="submit" class="btn btn-danger">Remover</button>
    }

</div>






