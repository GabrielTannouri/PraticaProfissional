@model Pratica_Profissional.ViewModel.ProdutoVM

@{
    ViewBag.Title = "Details";
    bool readOnly = Convert.ToBoolean(ViewBag.ReadOnly);
    ViewBag.readOnly = true;
}

@using (Html.BeginForm())
{
    <nav aria-label="breadcrumb" style="margin-top:10px;">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index")"><i class="fa fa-list"></i> Lista de produtos</a></li>
            <li class="breadcrumb-item active"><i class="fa fa-eye" style="margin-top:3px; margin-right:5px"></i> Detalhes do produto</li>
        </ol>
    </nav>

    <div class="form-horizontal">
        <div class="card" style="padding-bottom:16px">
            <h3 class="card-header" style="background-color:lightblue">Detalhes do produto</h3>
            @Html.Partial("Form", Model)
        </div>
    </div>

}

<script type="text/javascript">
    $(function () {
        $(".form-control").attr("disabled", true);
        $("#Fornecedor_btn-localizar").hide();
        $("#Categoria_btn-localizar").hide();
    })
</script>
<script src="~/Scripts/Util.js"></script>
