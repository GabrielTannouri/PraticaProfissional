@model IEnumerable<Pratica_Profissional.Models.Servico>

@using Pratica_Profissional.Util.Class;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var _action = ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString();
    var _controller = ViewContext.Controller.ValueProvider.GetValue("controller").RawValue.ToString();
}

@if (@TempData["message"] != null)
{
    if (@TempData["type"].ToString() == "sucesso")
    {
        <div class="alert alert-success" id="success-alert">

            <a class="close" data-dismiss="alert">&times;</a>

            <strong style="width:12px">Sucesso!</strong> @TempData["message"]

        </div>
    }

    if (@TempData["type"].ToString() == "erro")
    {
        <div class="alert alert-danger" id="success-alert">

            <a class="close" data-dismiss="alert">&times;</a>

            <strong style="width:12px">Erro!</strong> @TempData["message"]

        </div>
    }
}
<h1 class="d-flex justify-content-center">Consultar serviços</h1>

<p class="d-flex justify-content-end">
    <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Create", "Servico")'"><i class="fa fa-plus"></i>Adicionar</button>
</p>

<table id="tabela" class="table table-striped table-bordered" style="width:100%">
    <thead class="thead-dark">
        <tr>
            <th style="width:10%;text-align:right">
                @Html.DisplayNameFor(model => model.idServico)
            </th>

            <th style="width:36%;">
                @Html.DisplayNameFor(model => model.nmServico)
            </th>

            <th style="width:20%;text-align:right">
                @Html.DisplayNameFor(model => model.vlServico)
            </th>

            <th style="width:10%;">
                @Html.DisplayNameFor(model => model.dtCadastro)
            </th>

            <th style="width:10%;">
                @Html.DisplayNameFor(model => model.dtAtualizacao)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td style="width:10%; text-align:right">
                @Html.DisplayFor(modelItem => item.idServico)
            </td>

            <td style="width:36%;">
                @Html.DisplayFor(modelItem => item.nmServico)
            </td>

            <td style="width:20%;text-align:right">
                @Html.DisplayFor(modelItem => item.vlServico)
            </td>

            <td style="width:10%;">
                @Convert.ToDateTime(item.dtCadastro).ToString("dd/MM/yyyy")
            </td>

            <td style="width:10%;">
                @Convert.ToDateTime(item.dtAtualizacao).ToString("dd/MM/yyyy")
            </td>
            <td>
                <a title="Visualizar" class="btn btn-success btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Details", new { id = item.idServico }))"><i class="fa fa-eye"></i></a>
                <a title="Editar" class="btn btn-info btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Edit", new { id = item.idServico }))"><i class="fa fa-pencil-square-o"></i></a>
                <a title="Excluir" class="btn btn-danger btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Delete", new { id = item.idServico }))"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
    }
</table>

<script>
    $(document).ready(function () {
        $('#tabela').DataTable({
            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.10.24/i18n/Portuguese-Brasil.json'
            }
        });
    });

    $("#success-alert").fadeTo(5000, 500).slideUp(500, function () {
        $("#success-alert").slideUp(500);
    });
</script>
