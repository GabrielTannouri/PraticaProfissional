
@model IEnumerable<Pratica_Profissional.Models.ContasReceber>

@using Pratica_Profissional.Util.Class;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var _action = ViewContext.Controller.ValueProvider.GetValue("action").RawValue.ToString();
    var _controller = ViewContext.Controller.ValueProvider.GetValue("controller").RawValue.ToString();
}
@if (@TempData["message"] != null)
{
    if (@TempData["type"].ToString() == "sucesso")
    {
        <div class="alert alert-success" id="success-alert">

            <a class="close" data-dismiss="alert">&times;</a>

            <strong style="width:12px">Sucesso!</strong> @TempData["message"]

        </div>
    }

    if (@TempData["type"].ToString() == "erro")
    {
        <div class="alert alert-danger" id="success-alert">

            <a class="close" data-dismiss="alert">&times;</a>

            <strong style="width:12px">Erro!</strong> @TempData["message"]

        </div>
    }
}
<h1 class="d-flex justify-content-center">Consultar contas a receber</h1>


<table id="tabela" class="table table-striped table-bordered" style="width:100%">
    <thead class="thead-dark">
        <tr>
            <th style="width:5%;">
                @Html.DisplayName("Parcela")
            </th>

            <th style="width: 5%;">
                @Html.DisplayName("Modelo")
            </th>

            <th style="width: 5%;">
                @Html.DisplayName("Série")
            </th>

            <th style="width: 5%;">
                @Html.DisplayName("Número")
            </th>

            <th style="width: 10%;">
                @Html.DisplayName("Data vencimento")
            </th>

            <th style="width: 35%; ">
                @Html.DisplayName("Cliente")
            </th>
            
            <th style="width: 10%;">
                @Html.DisplayName("Valor")
            </th>
            
            <th style="width: 10%;">
                @Html.DisplayName("Situação")
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
<tr>
    <td style="width:5%;text-align:right">
        @Html.DisplayFor(modelItem => item.nrParcela)
    </td>

    <td style="width:5%;">
        @Html.DisplayFor(modelItem => item.modNota)
    </td>

    <td style="width:5%;text-align:right">
        @Html.DisplayFor(modelItem => item.serieNota)
    </td>

    <td style="width:5%;text-align:right">
        @Html.DisplayFor(modelItem => item.nrNota)
    </td>

    <td style="width:10%;">
        @Convert.ToDateTime(item.dtVencimento).ToString("dd/MM/yyyy")
    </td>

    <td style="width:35%";>
        @Html.DisplayFor(modelItem => item.cliente.nmPessoa)
    </td>

    <td style="width:10%;text-align:right">
        @Html.DisplayFor(modelItem => item.vlParcela)
    </td>

    <td style="width:10%;text-align:right">
        @Html.DisplayFor(modelItem => item.flSituacao)
    </td>

    <td>
        <a title="Visualizar" class="btn btn-success btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Details", new { modNota = item.modNota, serieNota = item.serieNota, nrNota = item.nrNota, nrParcela = item.nrParcela, idCcliente = item.cliente.idPessoa }))"><i class="fa fa-eye"></i></a>
        <a title="Pagar" class="btn btn-dark btn-sm" href="@HttpUtility.UrlDecode(Url.Action("Pagar",  new { modNota = item.modNota, serieNota = item.serieNota, nrNota = item.nrNota, nrParcela = item.nrParcela, idCliente =  item.cliente.idPessoa }))"><i class="fa fa-money"></i>
    </td>
</tr>
    }
</table>

<script>
    $(document).ready(function () {
        $('#tabela').DataTable({
            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.10.24/i18n/Portuguese-Brasil.json'
            }
        });
    });

    $("#success-alert").fadeTo(5000, 500).slideUp(500, function () {
        $("#success-alert").slideUp(500);
    });
</script>


