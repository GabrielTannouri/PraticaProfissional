@model Pratica_Profissional.ViewModel.FuncionarioVM

@{
    ViewBag.Title = "Edit";
    ViewBag.readOnly = true;
}
@using (Html.BeginForm())
{
    <nav aria-label="breadcrumb" style="margin-top:10px;">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index")"><i class="fa fa-list"></i> Lista de funcionários</a></li>
            <li class="breadcrumb-item active"><i class="fa fa-pencil-square-o" style="margin-top:3px; margin-right:5px"></i> Editar funcionário</li>
        </ol>
    </nav>

    <div class="form-horizontal">
        <div class="card" style="padding-bottom:16px">
            <h3 class="card-header" style="background-color:lightblue">Editar funcionário</h3>
            @Html.Partial("Form", Model)
        </div>
    </div>

}